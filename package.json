  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "oxlint": "^0.0.22",
    "prettier": "^3.1.1",
    "stylelint": "^16.0.2",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-order": "^6.0.4"
